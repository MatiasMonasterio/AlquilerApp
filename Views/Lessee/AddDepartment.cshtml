@{
    ViewBag.Renter = false;
}

<div class="w-100 p-md-5 pb-5 px-3 fee-main dashboard">
    <h1 class="pb-2 pb-md-0 mb-md-4 mb-2 title-main d-flex align-items-center px-3 px-md-0 pt-5 pt-md-0 mx-0">Agregar Inquilino</h1>

    <form asp-controller="lessee" asp-action="createNewDepartment" method="POST" class="col-lg-8 col-md-10 col-12 px-0 d-flex flex-column">
        <h3 class="secondary-title mb-4">Departamento 01</h3>
        <div class="form-group">
            <label class="w-100 mb-2">
                <p class="text-black-50 mb-0">Dirección</p>
                <input class="input-form" type="text" name="address" placeholder="Ingrese la dirección" required autocomplete="off">
            </label><!-- FROM LABEL -->
        </div><!-- FROM GROUP -->
        <div class="form-group">
            <label class="w-100 mb-2">
                <p class="text-black-50 mb-0">Número</p>
                <input class="input-form" type="text" name="number" placeholder="Ingrese la numeración" required autocomplete="off">
            </label><!-- FROM LABEL -->
        </div><!-- FROM GROUP -->
        <div class="form-group">
            <label class="w-100 mb-2">
                <p class="text-black-50 mb-0">Localidad</p>
                <input class="input-form" type="text" name="town" placeholder="Ingrese localidad" required autocomplete="off">
            </label><!-- FROM LABEL -->
        </div><!-- FROM GROUP -->
        <div class="form-group">
            <label class="w-100 mb-2">
                <p class="text-black-50 mb-0">Provincia</p>
                <input class="input-form" type="text" name="provincia" placeholder="Ingrese la provincia" required autocomplete="off">
            </label><!-- FROM LABEL -->
        </div><!-- FROM GROUP -->
        <div class="form-group">
            <label class="w-100 mb-2">
                <p class="text-black-50 mb-0">Antiguedad</p>
                <input class="input-form" type="number" name="age" placeholder="Ingrese los años de antiguedad" required autocomplete="off">
            </label><!-- FROM LABEL -->
        </div><!-- FROM GROUP -->
        <div class="form-group">
            <label class="w-100 mb-2">
                <p class="text-black-50 mb-0">Descripcción</p>
                <textarea class="input-form" name="description" placeholder="Ingrese una breve descripcción" autocomplete="off"></textarea>
            </label><!-- FROM LABEL -->
        </div><!-- FROM GROUP -->

        <input type="submit" value="Agregar" class="btn-primary px-4 py-1 ml-auto rounded-pill">
    </form><!-- FROM -->
</div>