@{
    ViewBag.Renter = false;
}

<div class="w-100 p-md-5 pb-5 px-3 fee-main dashboard position-relative">
    <h1 class="pb-2 pb-md-0 mb-md-4 mb-2 title-main d-flex align-items-center px-3 px-md-0 pt-5 pt-md-0 mx-0">Actualizar datos</h1>

    <form asp-controller="Lessee" asp-action="SaveUserInfo" method="POST" class="col-lg-8 col-md-10 col-12 px-0 d-flex flex-column">
        <div class="form-group">
            <label class="w-100 mb-2">
                <p class="text-black-50 mb-0">Nombre</p>
                <input class="input-form" type="text" name="name" value="@ViewBag.UserInfo.Name" autocomplete="off">
            </label>
        </div>

        <div class="form-group">
            <label class="w-100 mb-2">
                <p class="text-black-50 mb-0">Apellido</p>
                <input class="input-form" type="text" name="lastname" value="@ViewBag.UserInfo.Lastname" autocomplete="off">
            </label>
        </div>

        <div class="form-group">
            <label class="w-100 mb-2">
                <p class="text-black-50 mb-0">Correo</p>
                <input class="input-form" type="text" name="email" value="@ViewBag.UserInfo.Email" autocomplete="off">
            </label>
        </div>

        <div class="form-group">
            <label class="w-100 mb-2">
                <p class="text-black-50 mb-0">Telefono</p>
                <input class="input-form" type="text" name="telephone" value="@ViewBag.UserInfo.Telephone" autocomplete="off">
            </label>
        </div>

        <input type="submit" value="Guardar" class="btn-primary px-4 py-1 ml-auto rounded-pill">
    </form>
</div>