@{
    ViewData["Title"] = "Crear Cuenta Propietario";
    Layout = "_LayoutLogin";
}
<div class=" bg-light">
    <div class="register-container container w-100 d-flex vh-100 flex-column align-items-center justify-content-center pt-3 pt-md-5">
        <div class="d-flex register__tab text-center justify-content-around w-100 border-bottom position-relative">
            <p class="w-50 register__tab-selected position-relative">Cuenta</p>
            <p class="w-50">Departamentos</p>
        </div>

        <form action="" class="col-12 col-lg-7 mt-5 register-form">
            <label for="name" class="position-relative w-100 mb-2">
                <p class="d-inline">Nombre</p>
                <svg class="input-icon" width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                </svg>
                <input type="text" id="name" placeholder="Ingrese su nombre" class="form-control" autocomplete="off">
            </label>

            <label for="lastname" class=" position-relative w-100 mb-2">
                <p class="d-inline">Apellido</p>
                <svg class="input-icon" width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                </svg>
                <input type="text" id="lastname" placeholder="Ingrese su apellido" class="form-control" autocomplete="off">
            </label><!-- FORM GROUP -->

            <label for="email" class="position-relative w-100 mb-2">
                <p class="d-inline">Email</p>
                <svg class="input-icon" width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-envelope" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2zm13 2.383l-4.758 2.855L15 11.114v-5.73zm-.034 6.878L9.271 8.82 8 9.583 6.728 8.82l-5.694 3.44A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.739zM1 11.114l4.758-2.876L1 5.383v5.73z"/>
                </svg>
                <input type="text" id="email" placeholder="Ingrese su email" class="form-control" autocomplete="off">
            </label><!-- FORM GROUP -->

            <label for="telephone" class="position-relative w-100 mb-2">
                <p class="d-inline">Telefono</p>
                <svg class="input-icon" width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-telephone-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M2.267.98a1.636 1.636 0 0 1 2.448.152l1.681 2.162c.309.396.418.913.296 1.4l-.513 2.053a.636.636 0 0 0 .167.604L8.65 9.654a.636.636 0 0 0 .604.167l2.052-.513a1.636 1.636 0 0 1 1.401.296l2.162 1.681c.777.604.849 1.753.153 2.448l-.97.97c-.693.693-1.73.998-2.697.658a17.47 17.47 0 0 1-6.571-4.144A17.47 17.47 0 0 1 .639 4.646c-.34-.967-.035-2.004.658-2.698l.97-.969z"/>
                </svg>
                <input type="text" id="telephone" placeholder="Ingrese su telefono" class="form-control" autocomplete="off">
            </label><!-- FORM GROUP -->
        </form>

        <div class="register__button-container mt-auto mb-5 w-100 mx-auto d-flex justify-content-between">
            <a href='@Url.Action("register", "lessee")' class="col-5 col-md-3 btn btn-outline-primary rounded-pill">Atras</a>
            <a href='@Url.Action("departments-info", "lessee")'  class="col-5 col-md-3 btn btn-primary rounded-pill">Siguiente</a>
        </div>
    </div>
</div>
